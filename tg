import telebot
import random

from confic import token  # –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ 'token' –ø—Ä–∞–≤–∏–ª—å–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω
bot = telebot.TeleBot(token)

def gen_pass(pass_length):
    elements = "+-/*!&$#?=@<>123456789"
    password = ""
    for i in range(pass_length):
        password += random.choice(elements)
    return password

@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ü—Ä–∏–≤–µ—Ç! –Ø —Ç–≤–æ–π Telegram –±–æ—Ç. –ù–∞–ø–∏—à–∏ —á—Ç–æ-–Ω–∏–±—É–¥—å!")

@bot.message_handler(commands=['hello'])
def send_hello(message):
    bot.reply_to(message, "–ü—Ä–∏–≤–µ—Ç! –ö–∞–∫ –¥–µ–ª–∞?")

@bot.message_handler(commands=['bye'])
def send_bye(message):
    bot.reply_to(message, "–ü–æ–∫–∞! –£–¥–∞—á–∏!")

@bot.message_handler(commands=['penga'])
def send_penga(message):
    bot.reply_to(message, "–ü–∏–Ω–≥–≤–∏–Ω—ã –æ—á–µ–Ω—å –º–∏–ª—ã–µ")

@bot.message_handler(commands=['smile'])
def send_smile(message):
    smiles = ["üòä", "üòÇ", "üòç", "üòé", "üò¢", "üò°", "ü§î", "ü§ó", "ü•≥", "üòá"]
    random_smile = random.choice(smiles)
    bot.reply_to(message, random_smile)

@bot.message_handler(commands=['generate_password'])
def generate_password(message):
    pass_length = 12  # –í—ã –º–æ–∂–µ—Ç–µ –∏–∑–º–µ–Ω–∏—Ç—å –¥–ª–∏–Ω—É –ø–∞—Ä–æ–ª—è –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
    password = gen_pass(pass_length)
    bot.reply_to(message, f"–°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –ø–∞—Ä–æ–ª—å: {password}")

@bot.message_handler(commands=['coin_flip'])
def coin_flip(message):
    result = random.choice(["–û—Ä–µ–ª", "–†–µ—à–∫–∞"])
    bot.reply_to(message, f"–†–µ–∑—É–ª—å—Ç–∞—Ç –ø–æ–¥–±—Ä–∞—Å—ã–≤–∞–Ω–∏—è –º–æ–Ω–µ—Ç–∫–∏: {result}")

@bot.message_handler(commands=['help'])
def send_help(message):
    help_text = (
        "/start - –ó–∞–ø—É—Å—Ç–∏—Ç—å –±–æ—Ç–∞.n"
        "/hello - –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è.n"
        "/bye - –ü–æ–ø—Ä–æ—â–∞—Ç—å—Å—è.n"
        "/penga - –£–∑–Ω–∞—Ç—å –æ –ø–∏–Ω–≥–≤–∏–Ω–∞—Ö.n"
        "/smile - –ü–æ–ª—É—á–∏—Ç—å —Å–ª—É—á–∞–π–Ω—ã–π —Å–º–∞–π–ª–∏–∫.n"
        "/generate_password - –°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å –ø–∞—Ä–æ–ª—å.n"
        "/coin_flip - –ü–æ–¥–±—Ä–æ—Å–∏—Ç—å –º–æ–Ω–µ—Ç–∫—É.n"
        "/help - –ü–æ–∫–∞–∑–∞—Ç—å —ç—Ç–æ —Å–æ–æ–±—â–µ–Ω–∏–µ."
    )
    bot.reply_to(message, help_text)

@bot.message_handler(func=lambda message: True)
def echo_all(message):
    bot.reply_to(message, message.text)

bot.polling()
